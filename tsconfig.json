{
  "compilerOptions": {
    // Environment setup & latest features
    "lib": ["ESNext"],
    "target": "ESNext",
    "module": "Preserve",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // Path mapping for workspace packages
    "baseUrl": ".",
    "paths": {
      "@lokaly/domain": ["./backend/packages/domain/src/index.ts"],
      "@lokaly/events": ["./backend/packages/events/src/index.ts"],
      "@lokaly/db": ["./backend/packages/db/src/index.ts"],
      "@lokaly/auth": ["./backend/packages/auth/src/index.ts"],
      "@lokaly/utils": ["./backend/packages/utils/src/index.ts"]
    }
  },
  "include": ["backend/**/*"],
  "exclude": ["node_modules"]
}
